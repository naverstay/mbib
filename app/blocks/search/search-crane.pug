        +switcher(type="radio", name="type", value="typeOwner", id="typeOwner", role="radio", tabindex="0")._theme_tertirary._size_s С пробегом
      +e.city-other
        +btn('link', 'pin')(href="")._theme_tertirary._size_s.search__city-btn Другой город
    +e.row
      +e.group-on-mobile
        +e.col
          +select()(name="brand" data-placeholder="Марка" tabindex="1")._search._for-brand
            option(value="")
            option(value="m1" data-brand="audi") Audi
            option(value="m2" data-brand="bmw") BMW
            option(value="m3" data-brand="kia") Kia
            option(value="m4" data-brand="lada") Lada
            option(value="m5" data-brand="zaz") ЗАЗ
            option(value="m6" data-brand="gaz") ГАЗ
            option(value="m7" data-brand="uaz") УАЗ
            option(value="m8" data-brand="bmw") BMW
            option(value="m9" data-brand="kia") Kia
            option(value="m0" data-brand="lada") Lada
            option(value="m11" data-brand="zaz") ЗАЗ
            option(value="m12" data-brand="gaz") ГАЗ
            option(value="m13" data-brand="uaz") УАЗ
        +e.col
          +select(name="model" data-placeholder="Модель" tabindex="2")._search
            option(value="")
            option(value="v1") CL
            option(value="v2") CLX
            option(value="v3") MX
            option(value="v4") MX5
            option(value="v5") RL

      +e.col
        +select(name="body" data-placeholder="Тоннаж" data-minimum-results-for-search="Infinity" tabindex="3")._search
