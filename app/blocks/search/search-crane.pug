            option(value="ye2") 2016
            option(value="ye3") 2015
            option(value="ye4") 2014
            option(value="ye5") 2013
            option(value="ye6") 2012
            option(value="ye7") 2011
            option(value="ye8") 2010

      +e.col
        +control-group
          +input(type="text", name="priceStart", placeholder="Цена от" tabindex="13")._digit-pretify
          +input(type="text", name="priceEnd", placeholder="до, ₽" tabindex="14")._digit-pretify


    .search__advanced
