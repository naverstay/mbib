              +e.item._additional-option
                +select(name="ownertype" data-placeholder="Любой продавец" data-minimum-results-for-search="Infinity" tabindex="22")._search
                  option(value="")
                  option(value="fr") Все
                  option(value="bk") Автодилер
                  option(value="fl") Собственник
              +e.item._additional-option
                +select(name="ownertype" data-placeholder="Битые" data-minimum-results-for-search="Infinity" tabindex="22")._search
