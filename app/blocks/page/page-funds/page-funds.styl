.page-funds
  margin-top 48px

  &__title
    text-align center
    margin-bottom 20px

    .title
      font-size 24px
    +above(768px)
      margin-bottom 32px
      .title
        font-size 28px
        line-height 33px
    +above(1170px)
      margin-top: 55px

      .title
        font-size 32px
        line-height 37px

  &__wrapper
    max-width 1170px
    margin: 0 auto

  &__row
    +above(768px)
      display flex
      margin 0 -8px
    +above(1170px)
      margin 0 -15px

  &__item
    background #FFFFFF
    box-shadow 0px 24px 96px rgba(0, 0, 0, 0.02), 0px 6px 18px rgba(0, 0, 0, 0.02), 0px 2px 4px rgba(0, 0, 0, 0.02)
    border-radius 4px
    margin-bottom 12px
    padding 32px 10px 34px
    text-align center
    +above(768px)
      margin 0 8px
      padding 32px 20px 22px
      width calc((100% / 3) - 16px)
      display flex
      flex-wrap wrap
      justify-content: center
    +above(1170px)
      padding 38px 30px
      margin 0 15px

  &__name
    font-size 20px
    line-height 25px
    margin-bottom 12px
    font-weight bold

  &__text
    font-size 16px
    line-height 24px
    margin-bottom 24px
    color #787878

  &__link
    font-size 14px
    line-height 16px
    border-bottom 1px solid #3870C6
    white-space nowrap
    +above(768px)
      &-wrap
        display flex
        align-items flex-end
    +above(1170px)
      font-size 16px

