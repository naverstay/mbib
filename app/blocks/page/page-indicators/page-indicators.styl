.page-indicators
  &__wrap
    background #fff
    padding-bottom 30px
    max-width 1170px

    &.wide
      max-width 1200px
      padding-bottom: 65px

      +above(768px)
        padding-bottom: 40px

        .page-indicators__row
          padding: 0 25px

          .page-indicators__icon
            margin-bottom: 30px

          .page-indicators__name
            font-size: 24px
            line-height: 28px

      +above(1170px)
        padding-bottom: 30px

        .page-indicators__row
          padding: 0

    +above(768px)
      margin 32px 30px
      box-shadow 0 24px 96px rgba(0, 0, 0, 0.02), 0px 6px 18px rgba(0, 0, 0, 0.02), 0px 2px 4px rgba(0, 0, 0, 0.02)

    +above(1170px)
      margin: 50px auto
      padding-bottom: 35px

  &__title
    padding-top 32px
    text-align center
    margin-bottom 24px

    +above(768px)
      margin-bottom 36px
      .title
        font-size 28px
        line-height 33px
    +above(1170px)
      margin-bottom 48px
      .title
        font-size 32px
        line-height 37px

  &__row
    +above(768px)
      display flex
      flex-wrap wrap
    +above(1170px)
      flex-wrap nowrap

  &__col
    text-align center
    margin-bottom 28px

    &:last-child
      margin-bottom 0

    +above(768px)
      padding: 0 10px
      max-width 50%
      margin-bottom 48px

      &:nth-child(3)
        margin-bottom 0

    +above(1170px)
      max-width 25%
      margin-bottom 0

  &__icon
    width 56px
    height 56px
    background #CC0033
    border-radius 8px
    margin auto
    margin-bottom 20px
    display flex
    align-items center
    justify-content center

    &.icon_round
      border-radius: 100%
      background: rgba(204, 0, 51, 0.15)

    +above(768px)
      width 64px
      height 64px

  &__name
    font-size 20px
    line-height 25px
    text-align center
    color #191919
    font-weight bold
    margin-bottom 8px

  &__text
    font-size 16px
    line-height 24px
    color #787878
    +above(1170px)
      max-width 90%
      margin auto
