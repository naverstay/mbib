.page-works
  margin-top 48px
  padding-bottom: 48px

  +above(768px)
    padding-bottom 54px

  +above(1170px)
    margin-top: 55px
    padding-bottom: 46px

  &__tooltip-button
    width: 14px
    height: 14px
    display block

    svg
      width: 100%
      height: 100%
      fill: #fff

  &__tooltip
    position: relative
    margin: 0 4px
    display: inline-block
    vertical-align: -2px

  &__title
    text-align center
    margin-bottom 34px

    .title
      font-size 24px
      letter-spacing: -.025em

    +above(768px)
      margin-bottom 54px
      .title
        font-size 28px
        line-height 33px
    +above(1170px)
      margin-bottom 48px
      .title
        font-size 32px
        line-height 37px

  &__item
    display flex
    margin-bottom 28px

    &:last-child
      margin-bottom 0

    +above(768px)
      padding-right: 20px
      width 50%
      flex-wrap wrap
      flex-direction column
      margin-bottom: 44px

    +above(1170px)
      width 25%
      margin-bottom: 28px

  &__row
    +above(768px)
      display flex
      flex-wrap wrap

  &__icon
    min-width 48px
    min-height 48px
    max-width 48px
    max-height 48px
    background #CC0033
    border-radius 50%
    margin-right 16px
    display flex
    align-items center
    justify-content center
    +above(768px)
      width 64px
      height 64px
      max-width 64px
      max-height 64px
      margin-bottom 16px

    +above(1170px)
      margin-bottom: 24px

  &__name
    font-weight bold
    font-size 18px
    line-height 24px
    margin-bottom 8px

    +above(1170px)
      height: 48px
      display flex
      overflow: hidden
      align-items center
      margin-bottom: 12px

  &__text
    color #787878
    font-size 16px
    line-height 24px
    +above(1170px)
      max-width 85%

  &__content
    +above(768px)
      width 100%
