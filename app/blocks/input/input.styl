.input
  padding-right 10px
  padding-left 10px
  display block
  box-sizing border-box
  width 100%
  height $heightControl
  font-family Roboto, sans-serif
  font-size 14px
  border 1px solid #dedede
  transition border-color .3s

  &[type=text]
    appearance none

  &[type=number]:not(.appearance)
    -moz-appearance textfield

    &:hover,
    &:focus
      -moz-appearance: number-input;

    &::-webkit-outer-spin-button,
    &::-webkit-inner-spin-button
      -webkit-appearance none
      margin 0


  +above(1170px)
    padding-right 14px
    padding-left 14px

  .control-group & + &
    margin-left -1px

  &::placeholder
    color #787878
    opacity 1

  &_iconed
    padding-left 48px

  &:focus
    position relative
    z-index 1
    border 1px solid $colorSecondary

  &_invalid
    border-color $colorMain !important

  .control-group &_digit-pretify
    width 50%
    flex-grow 1
