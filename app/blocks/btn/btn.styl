.btn
  cursor pointer
  padding 0 13px
  display inline-flex
  align-items center
  justify-content center
  white-space: nowrap
  height $heightM
  font-size 12px
  line-height 48px
  text-align center
  text-decoration none
  text-transform uppercase
  color $colorText
  background-color #ddd
  border none

  &_size_s
    height $heightS
    line-height @height + 1

  &_size_m
    height $heightM
    line-height @height + 1

  &_size_sm
    height $heightSM
    line-height @height + 1

  &_size_l
    height $heightL
    line-height @height + 1

  &_size_xxl
    height $heightXXL
    font-size 16px
    line-height @height + 1
    text-transform none

  &_size_control
    height $heightControl
    line-height $heightControl

  &_fullwidth
    width 100%

  &__text
    display inline-block
    padding 0 6px
    line-height 1.2
    letter-spacing 1px

  &:hover
    background-color lightness(#ddd, 80%)

  &:focus
    transform translate3D(0, 1px, 0)

  &:active,
  &_active
    transform translate3D(0, 2px, 0)
    box-shadow none

    &[disabled]
      transform none

  &_theme_main
    color #fff
    background-color $colorMain
    background-image linear-gradient(to right, $colorMain, #E61A4D)
    box-shadow 0 2px 0 #900

    &:hover,
    &:focus
      background-image linear-gradient(to right, #E61A4D, lighten($colorMain, 20))

    &:active,
    ^[0]_active&
      background-color darken($colorMain, 5)
      background-image none
      box-shadow inset 0 3px 6px #900

  &_theme_secondary
    color #fff
    background-color $colorSecondary
    background-image linear-gradient(to right, $colorSecondary, #528AE0)
    box-shadow 0 2px 0 #053d93

    &:hover,
    &:focus
      background-image linear-gradient(to right, #528ae0, #6ba3f9)
      box-shadow 0 2px 0 #1f57ad

    &:active,
    ^[0]_active&
      background-color #1f57ad
      background-image none
      box-shadow inset 0 3px 6px #053d93


  &_theme_tertirary
    color $colorText
    background-color lighten($colorDecorative, 10)
    box-shadow 0 2px 0 darken($colorDecorative, 20)

    &:hover,
    &:focus
      background-color $colorDecorative
      box-shadow 0 2px 0 darken($colorDecorative, 40)

    &:active,
    ^[0]_active&
      background-color darken($colorDecorative, 20)
      box-shadow inset 0 3px 6px darken($colorDecorative, 40)

    &[disabled]:hover,
    &[disabled]:active
      background-color lighten($colorDecorative, 10)
      box-shadow 0 2px 0 darken($colorDecorative, 20)

  &_theme_akcent
    color #fff
    background-color $colorAkcent
    background-image linear-gradient(to right, $colorAkcent, #63b836)
    box-shadow 0 2px 0 #289938

    &:hover,
    &:focus
      background-image linear-gradient(to right, $colorAkcent, #63b836)
      box-shadow 0 2px 0 #2a8036

    &:active,
    ^[0]_active&
      background-color #63b836
      background-image none
      box-shadow inset 0 3px 6px #289938
  &_theme_red
    background #CB1239
    box-shadow 0px 3px 0px #940E2A !important
    border-radius 4px
    color #fff
    font-weight bold
    &:hover
      background-image: linear-gradient(to right, #e61a4d, #f36);
  &_theme_link
    padding-right 0
    padding-left 0
    color darken($colorDecorative, 40)
    background-color transparent

    &:hover
      background-color transparent

  &_theme_pseudo
    color inherit
    background-color transparent
    border 1px dashed darken($colorDecorative, 40)

  &__remove
    display inline-block
    width 19px
    line-height 1
    text-align center

  &__icon
    position relative
    display inline-block
    size 20px
    fill currentcolor

    ^[0]__remove &
      size 11px

    ^[0]_size_xxl &
      size 26px

      +above(768px)
        size 40px

  &_space_left
    margin-left 10px

  &_space_right
    margin-right 10px
