include ../text/text
include ../radio/radio

mixin payment-item(data, checked)
  +b.payment-item.js-payment-item&attributes(attributes)(data-id=data.id)
    if (data.card === 'add')
      +btn('button', 'add')._size_xxl._theme_link._fullwidth Добавить карту

    else
      +e.LABEL.body
        +e.radio
          +radio(name="payment" role="radio" checked=checked)
        +e.DIV.image
          img(src=data.img, alt="")
        if data.name
          +e.name
             +text._size_l._no-margin._bold #{data.name}
        if data.number
          +e.number
            +text._size_l._no-margin #{data.number}
          +e.card
            +text._size_l._no-margin #{data.card}
          +e.close
            +icon('close', false).close-icon
