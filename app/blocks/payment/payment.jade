include ../payment/payment-item
include ../btn/btn
include ../text/text
include ../form/form
include ../input/input
include ../checkbox/checkbox

mixin payment(data , columns)
  - var currentClass = 'payment '
  - if(columns) currentClass += 'payment_columns'
    div(class=currentClass)
      each item, index in data
        +payment-item(item, !index)
      .payment-content(id="card-control")
        +checkbox(name="hasPhoto", checked  tabindex="19") Запомнить карту для последующих оплат
      .payment-content(id="qiwi-control")
        +text._bold._no-margin Qiwi кошелек
        +input( placeholder="+7 000 000 00 00" type="tel" name="phone").js-phone-field__control.payment__content-control
      .payment-content(id="phone-control")
        +text._bold._no-margin Номер телефона
        +input( placeholder="+7 000 000 00 00" type="tel" name="phone").js-phone-field__control.payment__content-control
      .payment-content(id="alfa-control")
        +text._bold._no-margin Альфа-клик логин
        +input( placeholder="7999999999" type="nember" ).payment__content-control

