.credit-banks
  display block
  padding-top: 6px

  .title.title_level_1
    font-size: 24px
    line-height: 32px
    margin-top: 15px

    +above(768px)
      margin-top: 28px
      margin-bottom: 20px
      font-size: 28px
      line-height: 36px

  +below(767px)
    padding: 5px 5px 0

  +above(1170px)
    padding: 6px 15px 0

  &__result-icon
    position: absolute
    left: 33px
    top: 27px
    width: 18px
    height: 14px
    fill: #fff

  &__success
    margin-bottom: 32px
    position: relative
    background: linear-gradient(90deg, #6CA840 0%, #78B64B 100%), #FFF
    font-size: 16px
    line-height: 19px
    color: #FFFFFF
    padding: 24px 20px 24px 66px

    +above(768px)
      margin-bottom: 36px

  &__inner
    +above(1170px)
      margin: 0 15px
