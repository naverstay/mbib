.tooltip
  position: absolute
  z-index: 2
  left: 0
  display: none

  +above(980px)
    left: 50%
    transform translateX(-50%)

  &__popup
    background: rgba(34, 34, 34, .95)
    font-size: 14px;
    line-height: 21px;
    color: #FFFFFF;
    border-radius: 7px / 4px
    width: 382px
    max-width 90vw
    padding: 16px 20px
    position: relative

    &::before
      content: '';
      position: absolute;
      left: 20px
      width: 0;
      height: 0;
      margin-left: -8px
      border-left: 8px solid transparent
      border-right: 8px solid transparent

      +above(980px)
        left: 50%

    p
      + p
        margin-top: 10px

  &-top
    bottom: 100%
    padding-bottom: 12px

    .tooltip__popup::before
      top: 100%
      border-top: 8px solid rgba(34, 34, 34, .95)

  &-bottom
    top: 100%
    padding-top: 12px

    .tooltip__popup::before
      bottom: 100%
      border-bottom: 8px solid rgba(34, 34, 34, .95)

  &__parent

    &:hover ^[0]
      display: block

  &__link
    color: #fff
    display inline-flex
    flex-flow row nowrap
    align-items: center;

    span
      position: relative

      &::before
        content: '';
        position: absolute;
        bottom: -3px
        right: 0
        left: 0
        border-bottom: 1px solid #fff
        opacity: .23
        transition opacity .3s

    &:hover
      span::before
        opacity: 1

    svg
      margin-left: 10px
      width: 20px
      height: 16px
      fill: #fff
