				+e.FIELDSET.section
					+e.LEGEND.section-name Привод
					+e.row._align_left
						+e.item._fullwidth
							+switcher(type="radio", name="drive", value="forw", id="d1", role="radio", tabindex="26")._theme_simple._size_m Передний
							+switcher(type="radio", name="drive", value="back", id="d2", role="radio", tabindex="27")._theme_simple._size_m Задний
							+switcher(type="radio", name="drive", value="full", id="d3", role="radio", tabindex="28", checked="checked")._theme_simple._size_m Полный

				+e.FIELDSET.section
					+e.LEGEND.section-name Коробка передач
					+e.row._align_left
						+e.item._fullwidth
