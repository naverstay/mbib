mixin step4()
	+b.step&attributes(attributes)
		+akcent-block
			+form()
				+e.navigation
					+btn('link')(href="").__navigation-back Назад
					+e.SPAN.navigation-spacer
					+btn('button').__navigation-next Вперёд
				+title(2).visuallyhidden Год выпуска вашего автомобиля?
				.step__head
					.step__head-name
						+car-name(1, 'BMW / X3 / 2013 Хэтчбек 5 дв. VI (F3x)', 'bmw')
					.step__head-action
						+btn('button', 'close')(href="")._theme_tertirary._size_s.step__head-clear Очистить
				+e.FIELDSET.section
					+e.LEGEND.section-name Год выпуска
					+e.row
						+e.item._fullwidth
							+control-group._wrap
								+switcher(type="radio", name="year", value="2017", id="year", role="radio", tabindex="0", required, data-value-missing="Выберите тип пользователя")._theme_simple._size_m 2017
								+switcher(type="radio", name="year", value="2016", id="year2016", role="radio", tabindex="1")._theme_simple._size_m 2016
								+switcher(type="radio", name="year", value="2015", id="year2015", role="radio", tabindex="2", disabled="disabled")._theme_simple._size_m 2015
								+switcher(type="radio", name="year", value="2014", id="year2014", role="radio", tabindex="3")._theme_simple._size_m 2014
								+switcher(type="radio", name="year", value="2013", id="year2013", role="radio", tabindex="4")._theme_simple._size_m 2013
								+switcher(type="radio", name="year", value="2012", id="year2012", role="radio", tabindex="5")._theme_simple._size_m 2012
								+switcher(type="radio", name="year", value="2011", id="year2011", role="radio", tabindex="6", checked="checked")._theme_simple._size_m 2011
								+switcher(type="radio", name="year", value="2010", id="year2010", role="radio", tabindex="7")._theme_simple._size_m 2010
								+switcher(type="radio", name="year", value="2009", id="year2009", role="radio", tabindex="8")._theme_simple._size_m 2009
								+switcher(type="radio", name="year", value="2008", id="year2008", role="radio", tabindex="9")._theme_simple._size_m 2008
								+switcher(type="radio", name="year", value="2007", id="year2007", role="radio", tabindex="10")._theme_simple._size_m 2007
								+switcher(type="radio", name="year", value="2006", id="year2006", role="radio", tabindex="11")._theme_simple._size_m 2006
								+switcher(type="radio", name="year", value="2005", id="year2005", role="radio", tabindex="12")._theme_simple._size_m 2005
								+switcher(type="radio", name="year", value="2004", id="year2004", role="radio", tabindex="13")._theme_simple._size_m 2004
