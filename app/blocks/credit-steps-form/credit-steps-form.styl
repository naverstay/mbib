.credit-steps-wrapper
  background: #FFF
  box-shadow: 0 24px 96px rgba(0, 0, 0, 0.02), 0px 6px 18px rgba(0, 0, 0, 0.02), 0px 2px 4px rgba(0, 0, 0, 0.02)
  padding: 32px 16px 16px
  max-width 675px
  margin: 7px auto 48px
  position: relative

  .lbl
    font-family Roboto, sans-serif

  .btn
    text-transform: none

  &__deco
    pointer-events none
    z-index: -1
    position: absolute
    bottom: 100%
    margin-bottom: -37px
    left: 50%
    width: calc(100vw + 160px)
    transform translateX(-50%)
    border-bottom: 8px solid #49484D

    &::after,
    &::before
      content: ''
      position: absolute
      bottom: -1px
      width: 235px
      height: 95px
      background-repeat: no-repeat
      background-position: 100% 100%
      background-size: contain

    &::after
      right: -20px
      background-image: url(../images/credit-steps/car-yellow.svg)


    &::before
      left: -20px
      background-image: url(../images/credit-steps/car-red.svg)
      transform: scale(-1, 1)

  .form__input-field
    width: 100%

    +below(767px)
      margin-bottom: 0

    +above(768px)
      margin-bottom: 10px

  .form__info
    font-size: 14px
    line-height: 21px
    color: #787878
    margin-top: -10px
    margin-bottom: 24px

    +above(768px)
      margin-bottom: 20px

  .form__caption
    display flex
    align-items flex-end
    justify-content space-between
    margin-top: 12px
    margin-bottom: 20px

    .step-counter
      font-size: 16px
      line-height: 19px
      color: #787878
      padding-left: 10px

    .step-name
      font-weight: 600
      font-size: 18px
      line-height: 21px

    +above(768px)
      margin-top: 25px

  &__title
    font-weight: 600
    font-size: 21px
    line-height: 25px
    margin-bottom: 24px

  +below(767px)
    .form__row
      margin-bottom: 8px

    .form__item
      + .form__item
        margin-top: 5px

  +above(768px)
    padding: 24px 16px 16px
    margin-bottom: 64px

    &__deco
      margin-bottom: -70px

      &::after
        right: -50px

      &::before
        left: -50px

      &::after,
      &::before
        height: 107px
        width: 50vw

    &__title
      margin-bottom: 32px

  +above(1170px)
    max-width 1005px
    padding: 40px 30px 30px
    margin-bottom: 80px
    margin-top: 26px

    .lbl
      font-size: 16px
      line-height: 19px

    &__deco
      margin-bottom: -80px

      &::after
        right: -145px

      &::before
        left: -145px

      &::after,
      &::before
        height: 145px

  +above(1600px)
    &__deco
      width: 100vw

.credit-steps-form

  .lbl
    font-weight: normal

  .form__row_footer
    +below(767px)
      padding-top: 16px

    .skip-link
      cursor: pointer
      font-size: 14px
      line-height: 16px
      color: #787878
      transition color .3s
      margin: 24px auto 0

      &:hover
        text-decoration: underline
        color: #CC0033

    +above(768px)
      align-items center
      justify-content space-between

      .skip-link
        margin: 0 28px
        font-size: 16px
        line-height: 19px

      .form__item:last-child
        flex 1 0 auto
        display flex
        align-items center
        margin-left: auto
        justify-content: flex-end

        .skip-link
          order -1

    +above(1170px)
      .skip-link
        margin: 0 40px

    .btn
      min-width 164px
      font-size: 16px

      +below(767px)
        width: 100%

