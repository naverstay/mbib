.faq
  +above(768px)
    margin-top 48px
    margin-bottom: 60px

  +above(1170px)
    margin-top: 68px
    margin-bottom: 80px

  &__title
    text-align center
    margin-bottom 30px

    .title
      font-size 24px

    +above(768px)
      margin-bottom 32px
      .title
        font-size 28px
        line-height 33px

    +above(1170px)
      margin-top: 55px

      .title
        font-size 32px
        line-height 37px

  &__wrapper
    max-width 944px
    margin: 0 auto

    +below(767px)
      padding: 0 5px

  &__item
    position: relative
    border-bottom: 1px solid #DEDEDE
    padding-bottom: 20px
    margin-bottom: 20px

    &:last-child
      border-bottom: 0

    &-content.open
      .page-faq__name::before
        transform rotate(135deg)

    +above(1170px)
      padding-bottom: 22px
      margin-bottom: 22px

  &__name
    cursor: pointer
    padding-right: 20px
    position: relative
    font-weight: 600
    font-size: 16px
    line-height: 21px
    color: #191919

    &::before
      content: ''
      position: absolute
      right: 8px
      top: 50%
      margin-top: -5px
      width: 7px
      height: 7px
      transition transform .3s
      transform rotate(-45deg)
      border: solid #787878
      border-width: 2px 2px 0 0

    +above(768px)
      font-size: 17px

  &__text
    padding-top: 14px
    padding-right: 20px
    font-size: 16px
    line-height: 24px
    color: #787878
    display none
