.breadcrumbs
  margin-bottom 5px
  display block
  font-size 12px

  .tires-page &
    margin-bottom: 12px

  &__item
    position relative
    padding-right 20px
    display inline-block

  &__sep-icon
    position absolute
    right 3px
    top 6px
    width 9px
    height 9px
    fill #787878

  &__link
    padding 5px 0
    display block
    text-decoration none
    color #787878

  .reviews &
    margin-top: 6px
