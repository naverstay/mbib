.text
  margin-bottom 17px
  display block

  &_no-margin
    margin-bottom 0

  &_bold
    font-weight bold

  &_size_s
    font-size 12px
    line-height 1.66667
  &_size_m
    font-size 14px
    line-height 1.2

  &_size_l
    font-size 16px
    line-height 1.625

  &__body
    line-height 1.71429
    color #787878



    ^[0]_important &
      color #191919

    p
      margin-bottom 0.85714em

    h3
      margin 16px 0 7px
      font-size 18px
      font-weight bold
      color $colorText

      +above(768px)
        font-size 22px

  &_theme_primary &__body
    color $colorText

.text-more
  position relative
  padding-left 27px
  display inline-block
  color $colorSecondary

  &::before
    content ''
    position relative
    margin-left -4px
    left -20px
    display inline-block
    width 4px
    height 4px
    border-radius 2px
    background-color currentColor
    box-shadow 7px 0 0 currentColor, 14px 0 0 currentColor
