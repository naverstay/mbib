.channel
  text-align: center

  &__feedback
    display none
    position: absolute
    background: #FFF
    flex-flow column nowrap
    justify-content center
    padding: 11px 20px 10px 60px
    min-height 60px
    box-shadow: 0 24px 96px rgba(0, 0, 0, 0.02), 0 6px 18px rgba(0, 0, 0, 0.02), 0 2px 4px rgba(0, 0, 0, 0.02)

    &.pos-2
      bottom: 0
      right: 0
      z-index: 1

      +above(768px)
        bottom: -12px
        padding-right: 38px

      +above(1170px)
        bottom: 20px
        padding-right: 80px

    &.pos-1
      top: 0
      left: 0

      +above(768px)
        left: -10px

      +above(1170px)
        top: 50px
        padding-right: 80px

    &-text
      font-size: 12.8987px
      line-height: 15px
      color: #787878
      opacity: 0.65

    &-caption
      font-weight: 600
      font-size: 15px
      line-height: 18px
      display: flex
      align-items: center
      color: #191919
      margin-bottom: 3px

    &-logo
      position: absolute
      top: 10px
      left: 10px
      border-radius: 100%
      color: #fff
      background: #CC0033
      font-family: Arial
      font-weight: bold
      font-size: 26px
      line-height: 30px
      display: flex
      align-items: center
      justify-content center
      width: 40px
      height: 40px

    +above(768px)
      display flex

    +above(1170px)
      min-height 72px
      padding-left: 72px

      &-logo
        left: 12px
        top: 12px
        width: 48px
        height: 48px

  &__text
    font-size: 16px
    line-height: 24px
    color: #787878

    +above(768px)
      font-size: 18px
      line-height: 28px

  &__title
    margin-bottom 12px

    .title
      font-size 24px
      line-height: 32px

    +above(768px)

      .title
        font-size: 32px
        line-height: 37px

    +above(1170px)
      margin-top: 55px
      margin-bottom: 10px

      .title
        font-size: 42px
        line-height: 49px

  &__deco

    +below(767px)
      pointer-events none
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      z-index: -1

    +above(768px)
      width: 48%
      position: relative

    +above(1170px)
      width: 48%

  &__controls
    padding-top: 20px

    .btn
      width: 200px
      text-transform: none
      font-size: 16px

    +below(767px)
      text-align: center

  &__rocket

    +below(767px)
      position: absolute
      width: 100%
      height: 100%
      left: 50%
      top: 50%
      border-radius: 0
      transform translate(-50%, -50%)

    img
      display block
      width 100%
      position: relative
      z-index: 1

      +below(767px)
        opacity: .15
        max-width 100%
        max-height 100%
        min-height 400px
        position: absolute
        left: 50%
        top: 50%
        transform translate(-50%, -50%)

    &::before
      content: ''
      position: absolute
      left: 50%
      top: 50%
      border-radius: 100%
      transform translate(-50%, -50%)
      width: 100%
      height: 100%
      background: radial-gradient(110.62% 66.78% at 59.75% 40.75%, #FFF3B8 0%, #F4E28A 100%)

      +below(767px)
        border-radius: 0

    +above(768px)
      width: 330px
      height: calc(100% - 10px)
      overflow: hidden
      border-radius: 0 0 165px 165px
      position: relative
      margin: 0 auto

      img
        margin-bottom: -80px
        transform: scale(.85) translate(-30px, -15px)

      &::before
        width: 330px
        height: 330px
        top: auto
        bottom: 0
        transform: translate(-50%, 0)

    +above(1170px)
      width: 400px
      border-radius: 0 0 200px 200px

      img
        margin-bottom: -100px
        transform: scale(0.82) translate(-40px, -15px)

      &::before
        width: 400px
        height: 400px

  &__content
    +above(768px)
      width: 52%
      order: -1
      padding-top: 55px

    +above(1170px)
      width: 48%

  &__wrapper
    position: relative
    padding: 48px 15px 45px

    +above(768px)
      max-width 1140px
      margin: 0 auto
      display flex

    +above(1170px)
      padding: 45px 0
      justify-content: space-between

  +above(768px)
    padding: 0 15px
    text-align: left
