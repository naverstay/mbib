.tab
  margin-bottom 20px
  display block

  &__head
    ^[0]_simple &
      margin-bottom 15px

    ^[0]_default &
      display flex
      background-color #fff
      box-shadow inset 0 2px 0 #f8f8f8

      +above(600px)
        display block

    ^[0]_switcher &
      box-shadow 0 2px 0 darken($colorDecorative, 20)

  &__head-item
    ^[0]_simple &
      margin 0 12px
      display inline-block
      font-size 16px
      font-weight bold
      color $colorSecondary
      text-decoration none
      border-bottom 1px dashed

      &:first-child
        margin-left 0

    &_active
      ^[0]_simple &
        color $colorText
        border-bottom-color transparent

    ^[0]_default &
      padding 0 10px
      display inline-block
      height 60px
      font-size 14px
      font-weight bold
      line-height 60px
      text-decoration none
      color $colorText
      text-align center
      flex-grow 1

      +above(480px)
        padding 0 30px
        font-size 18px

      +above(600px)
        flex-grow initial


    ^[0]_switcher &
      position relative
      z-index 2
      padding 0 19px
      display block
      height $heightM
      font-size 12px
      line-height 48px
      text-align center
      text-decoration none
      text-transform uppercase
      color #000
      border none
      transition box-shadow .3s, background-color .3s, color .3s
      background-color lighten($colorDecorative, 10)
      box-shadow 0 2px 0 darken($colorDecorative, 20)

      +above(768px)
        display inline-block

      &:hover,
      &:focus
        background-color $colorDecorative
        box-shadow 0 2px 0 darken($colorDecorative, 40)


      &_active
        color #fff
        background-image none
        background-color darken($colorDecorative, 40)
        box-shadow 0 2px 0 darken($colorDecorative, 100)

  &__content
    display none

    &_active
      display block

    ^[0]_default &
      padding 20px 10px

      +above(768px)
        padding 20px 30px

  &__tip
    font-size: 14px
    color: #787878
    opacity: 0.65
    padding: 22px 0 10px
