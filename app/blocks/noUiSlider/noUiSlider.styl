.noUiSlider
  &__horizontal
    height 10px
    border-radius 0

  &__handle
    z-index 5
    size 30px
    box-shadow 0 0 8px rgba(0, 0, 0, .1)

  &__fill
    background $colorSecondary

  &.slider-v1
    border: 0
    box-shadow none
    background: none
    margin: 10px 0

    .noUi-pips
      padding: 0
      height: 30px

    .noUi-connect
      background: none

      &::before
        content: ''
        position: absolute
        top: 5px
        right: 0
        left: 0
        height: 3px
        border-radius: 1px
        background: #CC0033

    &::before
      content: ''
      position: absolute
      top: 5px
      right: 0
      left: 0
      height: 3px
      border-radius: 1px
      background: #D8D8D8

    .noUi-handle
      box-shadow none
      cursor: pointer
      background: none
      border: 0

      &::before
      &::after
        display none

    .noUi-touch-area
      position: absolute
      margin-top: -1px
      left: 50%
      top: 50%
      transform: translate(-50%, -50%)
      border-radius: 100%
      width: 14px
      height: 14px
      background: #fff
      border: 3px solid #CC0033

    .noUi-marker
      display none

      &:first-child +
        .noUi-value
          transform: translate(0, 50%)

          &::befere
            display none

    .noUi-value
      font-size: 12px
      line-height: 14px
      color: #787878
      top: -2px

      &::befere
        content: '' !important
        display block !important
        position: absolute !important
        top: -10px
        border-radius: 3px
        width: 7px
        height: 7px
        left: -3px
        background: #D8D8D8

      &:last-of-type
        transform: translate(-100%, 50%)

        &::befere
          display none
