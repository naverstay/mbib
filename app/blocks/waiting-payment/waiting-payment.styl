.waiting-payment
  display block
  padding: 32px 16px

  p
    font-weight: 300
    font-size: 16px
    line-height: 24px
    padding: 0 10px

  &__title
    font-weight: bold
    font-size: 24px
    line-height: 28px
    margin-bottom: 12px
    letter-spacing: -.02em

  &__loader
    min-height 40px
    position: relative
    padding-left: 48px
    display: inline-flex
    align-items center
    vertical-align: top
    margin: 30px 0 35px
    font-size: 16px
    line-height: 19px
    color: #787878

  &__icon-loader
    position: absolute
    left: 0
    top: 50%
    width: 34px
    height: 34px
    margin-top: -17px
    fill: #CB1239
    animation-name: spin;
    animation-duration: 3000ms;
    animation-iteration-count: infinite;
    animation-timing-function: linear;

  &__controls
    +below(768px)
      .btn
        width: 100%

  +above(768px)
    padding: 64px 30px 40px

    &__controls
      .btn
        padding: 0 32px

    &__loader
      margin-bottom: 52px
