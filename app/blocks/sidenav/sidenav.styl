.sidenav
	position relative
	display block
	height 100%

	&__btn
		position relative
		height 100%
		cursor pointer

	&__btn-inner
		position absolute
		top 50%
		left 50%
		margin -1px 0 0 -14px
		width 28px
		height 2px
		background-color #fff

		&::before,
		&::after
			position absolute
			left 0
			width 100%
			height 100%
			content ''
			background-color #fff

		&::before
			top -8px

		&::after
			bottom -8px

	&__close
		position absolute
		top 20px
		left 30px
		width 34px
		height 34px
		cursor pointer

		&::before,
		&::after
			position absolute
			top 50%
			left 0
			margin-top -1px
			width 100%
			height 2px
			content ''
			background-color #fff

		&::before
			transform rotate(-45deg)

		&::after
			transform rotate(45deg)

	&__overlay
		position fixed
		z-index 50
		top 0
		right 0
		left 0
		bottom 0
		display none
		visibility hidden
		opacity 0

		.page_open-side &
			display block
			visibility visible
			opacity 1

	&__body
		position fixed
		z-index 100
		top 0
		left 0
		bottom 0
		padding 73px 30px 30px
		overflow-y auto
		width 100%
		max-width 360px
		color #fff
		background-color $colorText
		will-change transform
		transition transform .4s
		transform translate3D(-100%, 0, 0)

		.page_open-side &
			transform translate3D(0, 0, 0)

	&__action
		margin-bottom 14px
		padding 20px 0
		font-size 16px
		border-bottom 1px solid rgba(#fff, .23)

	&__action-link
		position relative
		margin-bottom 5px
		padding 5px 0 5px 30px
		display block
		text-decoration none
		color #fff
		transition color .3s

		&:hover
			color $colorMain

	&__action-icon
		position absolute
		top 2px
		left 0
		size 20px
		fill currentcolor
		transition fill .3s

	&__action-text
		display inline-block
		border-bottom 1px solid rgba(#fff, .23)

		^[0]__action-link_pseudo &
			border-bottom-style dashed
