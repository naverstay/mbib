.subscribe-form
  display block
  margin 32px 0 24px
  padding 36px 16px
  background #FFFBE8;
  border 2px solid #FFF3B8;

  .btn_subscribe
    text-transform: none;
    margin-top: 8px
    min-width 100%

  &__input
    height: 44px;
    border: 1px solid #d5d5d5;

  &__tip
    font-size: 12px;
    line-height: 20px;
    color: #787878;
    margin-top: 24px

    a
      white-space: nowrap;
      color inherit
      position: relative

      &::before
        content: '';
        position: absolute;
        bottom: -3px
        right: 0
        left: 0
        transition opacity .3s
        border-bottom: 1px solid rgba(120, 120, 120, 0.65);

      &:hover::before
        opacity: 0

  &__title
    color #191919
    margin-bottom: 15px
    font-weight: bold;
    font-size: 18px;
    line-height: 28px;

  +above($tab)
    padding: 36px 28px

    .btn_subscribe
      margin: 0 0 0 8px
      min-width 184px

    &__tip
      font-size: 14px;
      line-height: 24px;
      margin-top: 12px

    &__title
      font-size: 22px;
      line-height: 32px;
      margin-bottom: 25px

    &__form
      display flex
      flex-flow row nowrap

  +above($wide)
    padding: 36px 100px 32px

    &__title
      font-size: 24px;
      line-height: 32px;
