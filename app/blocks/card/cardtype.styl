.cardtype
  &.tab
    margin-bottom 0

  & .tab__head-item_active&__tab-premium
    color #fff
    background-color #466FC0
    box-shadow inset 0 2px 0 #466FC0, 0 4px 0 #466FC0

  & .tab__head-item_active&__tab-up
    color #fff
    background-color #A0A0A0
    box-shadow inset 0 2px 0 #A0A0A0, 0 4px 0 #A0A0A0

  &__tab-icon
    position relative
    top 20px
    margin-right 5px
    display none
    size 18px
    vertical-align top
    fill currentColor

    +above(768px)
      display inline-block

  &__content
    margin -20px -10px 0
    padding 20px 10px

    +above(768px)
      display flex
      flex-wrap wrap
      margin -20px -30px 0
      padding 20px 30px
      align-items stretch

    +above(980px)
      flex-wrap nowrap

    &_premium
      color #fff
      background-color #466FC0
      box-shadow inset 0 2px 0 #466FC0

    &_up
      color #fff
      background-color #A0A0A0
      box-shadow inset 0 2px 0 #A0A0A0

  &__fig
    margin 0 auto
    width 140px

    +above(768px)
      margin 0
      flex-shrink 0
      flex-basis 140px

    +above(980px)
      width 206px
      flex-basis 206px

  &__desc
    margin 0 0 30px

    +above(768px)
      flex-grow 1
      width 50%
      margin-left 35px

    +above(980px)
      margin 0 35px 0 45px
      padding-top: 25px
      padding-bottom: 40px
      width auto

    h3
      margin 15px 0 20px
      font-size 23px
      font-weight 700
      line-height 1.25

    p
      font-size 16px
      line-height 1.5

  &__buy-wrap
    width 100%
    flex-shrink 0

    +above(768px)
      display flex
      align-items center

    +above(980px)
      width 280px
      flex-flow column nowrap
      align-items: flex-start
      justify-content: center

  &__buy
    font-weight bold
    text-align center

    +above(768px)
      padding-left 30px
      width 50%

    +above(980px)
      padding-left 0
      text-align left
      width auto

  &__feature
    margin-top 15px
    margin-bottom 27px
    font-size 16px
    line-height 1.5

    +above(768px)
      margin-bottom 0

    +above(980px)
      margin-bottom 27px

  &__feature-item
    position relative
    margin-bottom 15px
    padding-left 32px

    &::before
      position absolute
      left 0
      top 6px
      width 13px
      height 5px
      content ''
      border-bottom 3px solid #facd05
      border-left 3px solid #facd05
      transform rotate(-45deg)

      ^[0]__content_up &
        border-color #CC0033
