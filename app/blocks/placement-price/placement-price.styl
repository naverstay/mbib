.placement-price
  background: #fff
  margin: 0 -10px -66px

  +above(768px)
    margin-left: 0
    margin-right: 0

  &__head
    padding: 32px 18px 0

    +above(768px)
      display flex
      flex-wrap wrap
      align-items flex-start
      padding 40px 30px 0

    +above(980px)
      margin-bottom 0

  &__body
    padding: 10px 18px 30px

    +above(768px)
      padding: 25px 30px 30px

  &__feature
    margin-bottom 38px
    width 100%

    +above(768px)
      margin-bottom 48px

  &__feature-list

    +above(768px)
      margin 0 -15px

  &__feature-row
    padding 11px 0 12px
    display flex
    border-bottom 1px solid $colorDecorative

    +above(768px)
      margin-right 15px
      margin-left 15px
      flex-basis 40%
      flex-grow 1

    .tooltip__parent
      position: relative

  &__spec-icon
    width: 13px
    height: 13px

  &__feature-term
    flex: 1 0 auto
    color darken($colorDecorative, 40)

  &__feature-desc
    &::first-letter
      text-transform uppercase

  &__feature-link
    text-decoration underline
    color #787878

  &__cell
    margin-bottom: 30px
    width: 100%

    +above(768px)
      width: calc(50% - 15px)
      max-width 440px

      &:first-child
        margin-right: 30px

  &__label
    font-size: 14px
    line-height: 16px
    color: #787878
    margin-bottom: 8px

  &__title
    font-weight: bold
    font-size: 18px
    line-height: 21px
    color: #191919
    margin-bottom: 18px
    letter-spacing: -.02em

    +above(768px)
      font-size: 21px
      line-height: 25px
      margin-bottom: 25px

  &__tooltip
    display: inline-block
    vertical-align: middle
    margin-left: 3px

  &__data-side
    flex-basis: 440px
    width: 440px
    max-width 100%

