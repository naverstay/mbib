.control
  padding 12px 16px
  display inline-block
  text-decoration none
  color $colorSecondary
  background-color #fff
  border 1px solid $colorDecorative
  border-left none
  transition color .3s

  .control-group &
    &:first-child
      border-left 1px solid $colorDecorative

  .control-group_flex &
    flex-grow 1

  &:hover
    background-color: #ff0040
    color: #fff

  &_disabled,
  &_disabled:hover
    cursor default
    color #787878
    background-color #fff

  &_active,
  &_active:hover
    color $colorText
    background-color #fff
